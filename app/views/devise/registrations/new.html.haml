.row
  .col-md-4

  .col-md-4
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'panel panel-default'}) do |f|
      = f.error_notification
      
      .panel-heading 
        %h4 Registrate

      .panel-body
        .form-group
          = f.input :email, :required => true, :autofocus => true, :input_html => {class: 'form-control'}, label: false, placeholder: 'Correo electrónico'
        .form-group  
          = f.input :password, :required => true, :input_html => {class: 'form-control'}, label: false, placeholder: 'Contraseña'
        .form-group
          = f.input :password_confirmation, :required => true, :input_html => {class: 'form-control'}, label: false, placeholder: 'Confirma contraseña'
        
        %hr
        .form-group
          = f.button :submit, "Registrate", class: 'btn-block btn-primary btn-md'


  .col-md-4